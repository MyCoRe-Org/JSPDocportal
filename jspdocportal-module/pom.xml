    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>ckeditor</artifactId>
      <version>4.4.7-1</version>
      <scope>runtime</scope>
    </dependency>
    
    <dependency>
    	<groupId>org.webjars</groupId>
    	<artifactId>webjars-locator-core</artifactId>
    	<version>0.37</version>
	</dependency>
  </dependencies>
</project>
