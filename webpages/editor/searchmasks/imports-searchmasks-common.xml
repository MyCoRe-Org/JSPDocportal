<?xml version="1.0" encoding="ISO-8859-1"?>
<imports>
      <!-- *** Text fields *** -->
      <textfield id="TFzeile10" width="10" maxlength="10" />
      <textfield id="TFzeile32" width="32" maxlength="32" />
      <textfield id="TFzeile64" width="48" maxlength="64" />
      <textfield id="TFzeile128" width="64" maxlength="128" />
      <textfield id="TFzeile1024" width="64" maxlength="1024" />
      <!-- *** Text area *** -->
      <textarea id="TFarea4096" width="62" height="3" maxlength="4096" />
      
      <textfield  id="TFAllMetadata"  width="48" maxlength="64"  >
         <condition id="cond.minlength" minLength="3" required="true" >
             <label i18n="Editor.Validate.minlength" />
         </condition>
      </textfield> 
      
      <!-- *** Language List *** -->
      <list id="Slang" width="60" type="dropdown">
            <item value="de">
                  <label xml:lang="de">de</label>
            </item>
            <item value="en">
                  <label xml:lang="de">en</label>
            </item>
      </list>
      <!-- *** Data for the buttons ** -->
      <submitButton id="BSubmit" width="150px" >
            <label i18n="Editor.Search.Button.submit"/>
      </submitButton>
      <cancelButton id="BCancel" width="150px" >
            <label i18n="Editor.Search.Button.cancel" />
      </cancelButton>
      <panel id="SearchTwoButtons">
            <cell col="1" row="1" anchor="WEST" ref="BCancel" />
            <cell col="2" row="1" anchor="WEST" ref="BSubmit" var="search" />
      </panel>
      <panel id="SearchButton">
            <cell col="2" row="1" anchor="WEST" ref="BSubmit" var="search" />
      </panel>      
      <!-- *** Data for the hosts ** -->
      <text id="LInstances" i18n="Editor.Search.Label.instances" />
      <panel id="DInstances">
            <cell col="1" row="1" anchor="NORTHWEST" var="hosts/host[1]/@field">
                  <checkbox value="local" checked="true" label="local" />
            </cell>
            <cell col="2" row="1" anchor="NORTHWEST" var="hosts/host[2]/@field">
                  <checkbox value="selfremote" checked="false" label="entfernt" />
            </cell>            
      </panel>
      <helpHover id="HInstances" width="400px"  i18n="Editor.Search.Help.instances" />
      <!-- *** Data for the Institution ** -->
      <text id="LInstitution" i18n="Editor.Search.Label.institution" />
      <panel id="DInstitution">
            <hidden var="@field" default="institution" />
            <hidden var="@operator" default="like" />            
            <cell col="1" row="1" anchor="NORTHWEST" ref="CInstitution" var="@value" />
      </panel>
      <helpHover id="HInstitution" width="400px"  i18n="Editor.Search.Help.institution" />
      <list id="CInstitution" width="300px" type="dropdown">
            <item value="" i18n="Editor.Common.choose" />
            <include uri="localclass:org.mycore.frontend.editor.helper.MCRGetEditorElements?mode=getClassificationInItems&amp;prop=MCR.ClassificationID.Institution&amp;defaultValue=DocPortal_class_00000002&amp;withCounter=false" />                                      
      </list>       
      
      <!-- *** Data for the Surname ** -->
      <text id="LSurName" i18n="Editor.Search.Label.surname" />
      <panel id="DSurName">
            <hidden var="@field" default="surname" />
            <hidden var="@operator" default="like" />            
            <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile128" var="@value" />
      </panel>
      <helpHover id="HSurName" width="400px"  i18n="Editor.Search.Help.surname" />
      <!-- *** Data for the First Name ** -->
      <text id="LFirstName" i18n="Editor.Search.Label.firstname" />
      <panel id="DFirstName">
            <hidden var="@field" default="firstname" />
            <hidden var="@operator" default="like" />            
            <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile128" var="@value" />
      </panel>
      <helpHover id="HFirstName" width="400px" i18n="Editor.Search.Help.firstname" />
      <!-- *** Data for the Titles ** -->
      <text id="LTitles" i18n="Editor.Search.Label.title" />
      <panel id="DTitles">
            <hidden var="@field" default="title" />
            <hidden var="@operator" default="like" />            
            <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile128" var="@value" />
      </panel>
      <helpHover id="HTitles" width="400px"  i18n="Editor.Search.Help.title" />
      <!-- *** Data for the Creator ** -->
      <text id="LCreators" i18n="Editor.Search.Label.creator" />
      <panel id="DCreators">
            <hidden var="@field" default="creator" />
            <hidden var="@operator" default="like" />            
            <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile128" var="@value" />
      </panel>
      <helpHover id="HCreators" width="400px"  i18n="Editor.Search.Help.creator" />
      <!-- *** Data for the Origins ** -->
      <text id="LOrigins" i18n="Editor.Search.Label.origin" />
      <panel id="DOrigins">
            <hidden var="@field" default="origin" />
            <hidden var="@operator" default="like" />            
            <cell col="1" row="1" anchor="NORTHWEST" ref="COrigins" var="@value" />
      </panel>
      <helpHover id="HOrigins" width="400px"  i18n="Editor.Search.Help.origin" />

      <list id="COrigins" width="200px" type="dropdown">
            <item value="" i18n="Editor.Common.choose" />
            <include uri="localclass:org.mycore.frontend.editor.helper.MCRGetEditorElements?mode=getClassificationInItems&amp;prop=MCR.ClassificationID.Origin&amp;defaultValue=DocPortal_class_00000002&amp;withCounter=false" />                          
      </list>      
      
      <!-- *** Data for the Types ** -->
      <text id="LTypes" i18n="Editor.Search.Label.type" />
      <panel id="DTypes">
            <hidden var="@field" default="type" />
            <hidden var="@operator" default="like" />            
            <cell col="1" row="1" anchor="NORTHWEST" ref="CTypes" var="@value" />
      </panel>
      <helpHover id="HTypes" width="400px"  i18n="Editor.Search.Help.type" />
      <list id="CTypes" width="100px" type="dropdown">
            <item value="" i18n="Editor.Common.choose" />
            <include uri="localclass:org.mycore.frontend.editor.helper.MCRGetEditorElements?mode=getClassificationInItems&amp;prop=MCR.ClassificationID.Type&amp;defaultValue=DocPortal_class_00000005&amp;withCounter=false" />                          
      </list>       
      

      <!-- *** Data for the Subjects ** -->
      <text id="LSubjects" i18n="Editor.Search.Label.subject" />
      <panel id="DSubjects">
            <hidden var="@field" default="type" />
            <hidden var="@operator" default="like" />            
            <cell col="1" row="1" anchor="NORTHWEST" ref="CSubjects" var="@value" />
      </panel>
      <helpHover id="HSubjects" width="400px" i18n="Editor.Search.Help.subject" />
      <list id="CSubjects" width="200px" type="dropdown">
            <item value="" i18n="Editor.Common.choose" />        
            <include uri="localclass:org.mycore.frontend.editor.helper.MCRGetEditorElements?mode=getClassificationInItems&amp;prop=MCR.ClassificationID.DDC&amp;defaultValue=DocPortal_class_00000007&amp;withCounter=false" />                          
      </list>       
      
      <!-- *** Data for the Format ** -->
      <text id="LFormats" i18n="Editor.Search.Label.format" />
      <panel id="DFormats">
            <hidden var="@field" default="type" />
            <hidden var="@operator" default="like" />            
            <cell col="1" row="1" anchor="NORTHWEST" ref="CFormats" var="@value" />
      </panel>
      <helpHover id="HFormats" width="400px"  i18n="Editor.Search.Help.format" />
      <list id="CFormats" width="100px" type="dropdown">
            <item value="" i18n="Editor.Common.choose" /> 
              <include uri="localclass:org.mycore.frontend.editor.helper.MCRGetEditorElements?mode=getClassificationInItems&amp;prop=MCR.ClassificationID.Format&amp;defaultValue=DocPortal_class_00000006&amp;withCounter=false" />                          
      </list>       
      
      <!-- *** Data for the Format ** -->
      <text id="LLanguages" i18n="Editor.Search.Label.language" />
      <panel id="DLanguages">
            <hidden var="@field" default="type" />
            <hidden var="@operator" default="like" />            
            <cell col="1" row="1" anchor="NORTHWEST" ref="CLanguages" var="@value" />
      </panel>
      <helpHover id="HLanguages" width="400px"  i18n="Editor.Search.Help.language" />
      <list id="CLanguages" width="100px" type="dropdown">
            <item value="" i18n="Editor.Common.choose" /> 
             <include uri="localclass:org.mycore.frontend.editor.helper.MCRGetEditorElements?mode=getClassificationInItems&amp;prop=MCR.ClassificationID.Language&amp;defaultValue=DocPortal_class_00000004&amp;withCounter=false" />
      </list>       

      <!-- *** Data for the Metadata ** -->
      <text id="LMetadata" i18n="Editor.Search.Label.metadata" />
      <text id="LMetadataFastSearch" i18n="Editor.Search.Label.metadataFastSearch" />
      
      <panel id="DOnlyMetadata">
            <hidden var="@field" default="allMeta" />
            <hidden var="@operator" default="contains" />            
            <cell col="1" row="1" anchor="NORTHWEST" ref="TFAllMetadata" var="@value" />
      </panel>


      <panel id="DMetadata">
            <hidden var="@field" default="allMeta" />
            <hidden var="@operator" default="contains" />            
            <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile128" var="@value" />
      </panel>
      
      <helpHover id="HMetadata" width="400px" i18n="Editor.Search.Help.metadata" />
      <!-- *** Data for the Content ** -->
      <text id="LContents" i18n="Editor.Search.Label.content" />
      <panel id="DContents">
            <hidden var="@field" default="content" />
            <hidden var="@operator" default="like" />            
            <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile128" var="@value" />
      </panel>
      <helpHover id="HContents" width="400px" i18n="Editor.Search.Help.content" />
        
      
      <text id="LMaxResult100" i18n="Editor.Search.MaxResult100" />
</imports>