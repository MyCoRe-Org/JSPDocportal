<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE MyCoReWebPage>
<MyCoReWebPage>
<section title="Searchmask for all Persons" xml:lang="de">
<editor id="SearchMask_Allpers">
  <validationMessage>
      <label xml:lang="de">
        Eingabefehler: Bitte korrigieren Sie die markierten Felder 
      </label>              
      <label xml:lang="en">
        input error: Please correct the highlighted items
      </label>                    
  </validationMessage>

<!-- <target type="debug" /> -->
<!-- MyCore-Default: <source uri="request:servlets/MCRSearchServlet?mode=load&amp;id={id}" />
                     <target type="servlet" name="MCRSearchServlet" method="post" format="xml" />  -->
  <source uri="request:servlets/MCRJSPSearchServlet?mode=load&amp;id={XSL.editor.source.id}&amp;MCRSessionID={MCRSessionID}" />
  <target type="servlet" url="/servlets/MCRJSPSearchServlet" method="post" format="xml" />


<components root="SearchMask_Allpers" var="/query">

  <include uri="webapp:editor/searchmasks/imports-searchmasks-common.xml" />
  
  
  <panel id="SearchMask_Allpers">
    <hidden var="@mask" default="~searchstart-allpers" />  
    <hidden var="@maxResults" default="100" />
    
    <hidden var="types/type/@field" default="alldocs" />
    <hidden var="types/type[2]/@field" default="allpers" />
    
    <hidden var="conditions/@format" default="xml" />
    <hidden var="conditions/boolean/@operator" default="AND" />


    <cell col="1" row="1" anchor="NORTHWEST" ref="LFirstName" />
    <cell col="2" row="1" anchor="NORTHWEST" ref="DFirstName" var="conditions/boolean/condition" />
    <cell col="3" row="1" anchor="NORTHWEST" >
      <space width="20" height="0" />
    </cell>
    <cell col="4" row="1" anchor="WEST" ref="HFirstName" />

    <cell col="1" row="2" anchor="NORTHWEST" ref="LSurName" />
    <cell col="2" row="2" anchor="NORTHWEST" ref="DSurName" var="conditions/boolean/condition[2]" />
    <cell col="3" row="2" anchor="NORTHWEST" >
      <space width="20" height="0" />
    </cell>
    <cell col="4" row="2" anchor="WEST" ref="HSurName" />        
    
    <cell col="1" row="3" anchor="NORTHWEST" ref="LInstitution" />
    <cell col="2" row="3" anchor="NORTHWEST" ref="DInstitution" var="conditions/boolean/condition[3]" />
    <cell col="3" row="3" anchor="NORTHWEST" >
      <space width="20" height="0" />
    </cell>
    <cell col="4" row="3" anchor="WEST" ref="HInstitution" />    

    <cell col="1" row="50" anchor="NORTHWEST" ref="LInstances" />
    <cell col="2" row="50" anchor="NORTHWEST" ref="DInstances" />
    <cell col="3" row="50" anchor="NORTHWEST" >
      <space width="20" height="0" />
    </cell>
    <cell col="4" row="50" anchor="WEST" ref="HInstances" />

    <cell col="1" row="100"  />
    <cell col="2" row="100" anchor="EAST"      ref="SearchTwoButtons"  />
  </panel>

 </components>
</editor>
</section>
</MyCoReWebPage>