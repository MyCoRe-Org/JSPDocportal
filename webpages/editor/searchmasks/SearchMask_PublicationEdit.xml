<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE MyCoReWebPage>
<MyCoReWebPage>
<section title="Searchmask for Publications to Edit" xml:lang="de">
<editor id="SearchMask_PublicationEdit">

<!-- <target type="debug" /> -->
<!-- MyCore-Default: <source uri="request:servlets/MCRSearchServlet?mode=load&amp;id={id}" />
                     <target type="servlet" name="MCRSearchServlet" method="post" format="xml" />  -->
  <source uri="request:servlets/MCRJSPSearchServlet?mode=load&amp;id={XSL.editor.source.id}&amp;MCRSessionID={MCRSessionID}" />
  <target type="servlet" url="/servlets/MCRJSPSearchServlet" method="post" format="xml" />

  <validationMessage>
      <label xml:lang="de">
        Eingabefehler: Bitte korrigieren Sie die markierten Felder 
      </label>              
      <label xml:lang="en">
        input error: Please correct the highlighted items
      </label>                    
  </validationMessage>

<components root="SearchMask_PublicationEdit" var="/query">
    <include uri="webapp:editor/searchmasks/imports-searchmasks-common.xml"/>   
   
    <panel id="SearchMask_PublicationEdit" lines="off">
      <hidden var="@mask" default="~searchstart-wfpublication" />    
      <hidden var="conditions/@format" default="xml" />
      <hidden var="conditions/boolean/@operator" default="and" />
      <hidden var="conditions/boolean/condition1/@field"    default="objectType" />
      <hidden var="conditions/boolean/condition1/@operator" default="=" />
      <hidden var="conditions/boolean/condition1/@value"    default="document" />
      <hidden var="conditions/boolean/condition2/@field"    default="allMeta" />
      <hidden var="conditions/boolean/condition2/@operator" default="contains" />
      
      <cell row="1" col="1" anchor="WEST" >
        <text><label i18n="Editor.Common.MetaAndID" /></text>
      </cell>
      <!-- Search in allmetadata fields and ID that are text -->
      <cell row="1" col="2" anchor="WEST" var="conditions/boolean/condition2/@value">
         <textfield width="40px" />
      </cell>
      <cell row="1" col="3"  anchor="WEST" ref="SearchButton" /> 
  </panel>
 </components>
</editor>
</section>
</MyCoReWebPage>