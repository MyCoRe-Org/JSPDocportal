	  <textfield id="tf.Surname"  width="30" maxlength="128"  class="mandatory" >		
		<condition required="true" label="Bitte geben Sie einen Namen ein!" id="cond.Name" />
	  </textfield>	
	</cell>	
    <cell col="3" row="1" anchor="NORTHWEST" ref="APNameSurname" />
