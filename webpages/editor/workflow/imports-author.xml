  <!-- *** Alle Datenfelder die in edit-author und author-author benötigt werden -->
  
  <!-- *** NAME *** -->
  <panel id="DPName">
    <hidden var="metadata/names/@class" default="MCRMetaPersonName" />
    <hidden var="metadata/names/@parasearch" default="true" />
