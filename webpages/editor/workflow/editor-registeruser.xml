<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE MyCoReWebPage>
<MyCoReWebPage>
<section title="Registering for a user" xml:lang="de">

<editor id="register-user">
	<!-- this is a "special" editor - do nto enable this: <source uri="{sourceUri}" /> -->
     <cancel url="{cancelUrl}" />
   <!-- target type="debug" / -->
  <target type="servlet" name="MCRPassToTargetServlet" method="post" format="xml" />
  <validationMessage>
      <label xml:lang="de">
        Eingabefehler: Bitte korrigieren Sie die markierten Felder 
      </label>              
      <label xml:lang="en">
        input error: Please correct the highlighted items
      </label>                    
  </validationMessage>
    
  <components root="register-user" var="/mycoreuser">
        <include uri="webapp:editor/workflow/imports-user.xml" />		
        <headline anchor="CENTER">
            <text i18n="Editor.Common.mandatoryFields" />
        </headline>

        <panel id="register-user" lines="off">
            <!-- *** ID enabled? *** -->
		    <hidden var="user/@id_enabled" default="false" />
            <!-- *** Update allowed? *** -->
			<hidden var="user/@update_allowed" default="true" />
            <!-- *** Password *** -->
		    <hidden var="user/user.password" default="dummy"  sortnr="1"/>
            <!-- *** Primary group = membergroup *** -->
            <hidden var="user/user.primary_group" default="membergroup" sortnr="3"/> 
			
            <hidden var="user/user.creator" default="administrator" sortnr="4" />
			
            <cell row="1" col="1" ref="VSpace5" anchor="EAST" />

            <!-- *** User account data *** -->
            <cell row="2" col="1" anchor="EAST">
                <text id="LAccount">
                    <label xml:lang="de">
                        <span class="editorlabel">&#160;&#160;Bibliothekskennung&#160;(*):</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">&#160;&#160;User&#160;account&#160;(*):</span>
                    </label>
                </text>
            </cell>
            <cell row="2" col="2" anchor="WEST" ref="TFzeile64M" var="user/@ID" sortnr="1" />
            <cell row="2" col="3" anchor="EAST" >
                <helpPopup id="HAccount" >
                    <label xml:lang="de">
                        In diesem Feld geben Sie bitte die Benutzerkennung, also Ihre Bibliothekskennung ein.						
                    </label>
                    <label xml:lang="en">
                        Please specify the account - this ist your library Account.
                    </label>
                </helpPopup>
            </cell>
						
            <!-- *** Description *** -->
            <cell row="6" col="1" anchor="EAST">
                <text id="LDescription">
                    <label xml:lang="de">
                        <span class="editorlabel">Vorhaben(*):</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">Description(*):</span>
                    </label>
                </text>
            </cell>
            <cell row="6" col="2" anchor="WEST" ref="CGroupDescription" var="user/user.groups/groups.groupID" sortnr="6"/>
            
            <cell row="6" col="3" anchor="EAST">
                <helpPopup id="HDescription" width="400px" >
                    <label xml:lang="de">
                        Wählen Sie entweder einen Wert aus der Liste aus oder beschreiben sie, 
                        wofür sie den Zugang benötigen, damit ihnen auch die
                        notwendigen Zugriffsrechte zugeteilt werden können.
                    </label>
                    <label xml:lang="en">
                        Here you can choose your todos from the list or specify a description of your work. We need you description to give you the right Accessrules
                    </label>
                </helpPopup>
            </cell> 
            
            <cell row="7" col="1" ref="VSpace50" anchor="EAST" />
            <cell row="7" col="2" anchor="WEST" ref="TFarea4096M" var="user/user.description" sortnr="2" />
                        
            <!-- *** Contact information *** -->
            <cell row="9" col="1" ref="VSpace50" anchor="EAST" />
            <cell row="9" col="2" anchor="WEST">
                <text id="LContactInfo">
                    <label xml:lang="de">
                        <span class="editorlabel"><b>Kontaktinformationen:</b></span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel"><b>Contact&#160;information:</b></span>
                    </label>
                </text>
            </cell>

            <!-- *** Salutation *** -->
            <cell row="10" col="1" anchor="EAST">
                <text id="LSalutation">
                    <label xml:lang="de">
                        <span class="editorlabel">Titel:</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">Salutation:</span>
                    </label>
                </text>
            </cell>
            <cell row="10" col="2" anchor="WEST" ref="TFzeile32" var="user/user.contact/contact.salutation"  sortnr="5" />

            <!-- *** First name *** -->
            <cell row="11" col="1" anchor="EAST">
                <text id="LFirstName">
                    <label xml:lang="de">
                        <span class="editorlabel">Vorname&#160;(*):</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">First&#160;name&#160;(*):</span>
                    </label>
                </text>
            </cell>
            <cell row="11" col="2" anchor="WEST" var="user/user.contact/contact.firstname">
               <textfield id="tf.FirstName"  width="30" maxlength="64"  class="mandatory" >		
    		       <condition required="true" id="cond.FirstName1">
					<label i18n="Editor.Validate.Firstname.Empty" />
				   </condition>
	  	    	</textfield>	
			</cell>	

            <!-- *** Last name *** -->
            <cell row="12" col="1" anchor="EAST">
                <text id="LLastName">
                    <label xml:lang="de">
                        <span class="editorlabel">Nachname&#160;(*):</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">Last&#160;name&#160;(*):</span>
                    </label>
                </text>
            </cell>
            <cell row="12" col="2" anchor="WEST" var="user/user.contact/contact.lastname">
             <textfield id="tf.Surname"  width="30" maxlength="64"  class="mandatory" >		
				<condition required="true" id="cond.Name1">
					<label i18n="Editor.Validate.Name.Empty" />
				</condition>
			  </textfield>	
			</cell>

            <!-- *** Street *** -->
            <cell row="13" col="1" anchor="EAST">
                <text id="LStreet">
                    <label xml:lang="de">
                        <span class="editorlabel">Strasse:</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">Street:</span>
                    </label>
                </text>
            </cell>
            <cell row="13" col="2" anchor="WEST" ref="TFzeile128" var="user/user.contact/contact.street"  />

            <!-- *** City *** -->
            <cell row="14" col="1" anchor="EAST">
                <text id="LCity">
                    <label xml:lang="de">
                        <span class="editorlabel">Stadt:</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">City:</span>
                    </label>
                </text>
            </cell>
            <cell row="14" col="2" anchor="WEST" ref="TFzeile128" var="user/user.contact/contact.city" />

            <!-- *** Postal code *** -->
            <cell row="15" col="1" anchor="EAST">
                <text id="LPostalCode">
                    <label xml:lang="de">
                        <span class="editorlabel">Postleitzahl:</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">Postal code:</span>
                    </label>
                </text>
            </cell>
            <cell row="15" col="2" anchor="WEST" ref="TFzeile32" var="user/user.contact/contact.postalcode"  />

            <!-- *** Country *** -->
            <cell row="16" col="1" anchor="EAST">
                <text id="LCountry">
                    <label xml:lang="de">
                        <span class="editorlabel">Land:</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">Country:</span>
                    </label>
                </text>
            </cell>
            <cell row="16" col="2" anchor="WEST" ref="TFzeile64" var="user/user.contact/contact.country" />

            <!-- *** Gender *** -->
            <cell row="17" col="1" anchor="EAST">
                <text id="LGender">
                    <label xml:lang="de">
                        <span class="editorlabel">Anrede:</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">Gender:</span>
                    </label>
                </text>
            </cell>
            <cell row="17" col="2" anchor="WEST" ref="SFemale" var="user/user.contact/contact.state" />


            <!-- *** Institution 
            <cell row="17" col="1" anchor="EAST">
                <text id="LInstitution">
                    <label xml:lang="de">
                        <span class="editorlabel">Institution:(*)</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">Institution:(*)</span>
                    </label>
                </text>
            </cell>
            <cell row="17" col="2" anchor="WEST" ref="CInstitution" var="user/user.contact/contact.institution"  />           
			*** -->
			
            <!-- *** Faculty *** -->
            <cell row="18" col="1" anchor="EAST">
                <text id="LFaculty">
                    <label xml:lang="de">
                        <span class="editorlabel">Fakultät/Fachbereich:(*)</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">Faculty:(*)</span>
                    </label>
                </text>
            </cell>
            <cell row="18" col="2" anchor="WEST" ref="COrigin" var="user/user.contact/contact.faculty"  />
            

            <!-- *** Email *** -->
            <cell row="21" col="1" anchor="EAST">
                <text id="LEmail">
                    <label xml:lang="de">
                        <span class="editorlabel">Email:(*)</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">Email:(*)</span>
                    </label>
                </text>
            </cell>
            <cell row="21" col="2" anchor="WEST" var="user/user.contact/contact.email">
      	       <textfield id="tf.Email"  width="30" maxlength="128"  class="mandatory" >		
				   <condition id="cond.DEmail" regexp="\S+@\S+\.\S+" required="true" >
					  <label i18n="Editor.Validate.Email.Format" />
				   </condition>
				</textfield>	 
			</cell>	   
            

            <!-- *** Telephone *** -->
            <cell row="22" col="1" anchor="EAST">
                <text id="LTelephone">
                    <label xml:lang="de">
                        <span class="editorlabel">Telefon:</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">Telephone:</span>
                    </label>
                </text>
            </cell>
            <cell row="22" col="2" anchor="WEST" ref="TFzeile64" var="user/user.contact/contact.telephone"  />

            <!-- *** Fax *** -->
            <cell row="23" col="1" anchor="EAST">
                <text id="LFax">
                    <label xml:lang="de">
                        <span class="editorlabel">FAX-Nummer:</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">FAX&#160;number:</span>
                    </label>
                </text>
            </cell>
            <cell row="23" col="2" anchor="WEST" ref="TFzeile64" var="user/user.contact/contact.fax"  />

            <!-- *** Cellphone *** -->
            <cell row="24" col="1" anchor="EAST">
                <text id="LCellPhone">
                    <label xml:lang="de">
                        <span class="editorlabel">Mobiles&#160;Telefon:</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">Cellular&#160;phone:</span>
                    </label>
                </text>
            </cell>
            <cell row="24" col="2" anchor="WEST" ref="TFzeile64" var="user/user.contact/contact.cellphone"  />

            <!-- *** Cellphone *** -->
            <cell row="34" col="1" anchor="EAST">
                <text id="LAccountRights">
                    <label xml:lang="de">
                        <span class="editorlabel">rechtliche Regelungen:(*)</span>
                    </label>
                    <label xml:lang="en">
                        <span class="editorlabel">Account&#160;Rights:</span>
                    </label>
                </text>
            </cell>
            <cell row="34" col="2" anchor="WEST" var="user/accept" sortnr="4">
                <checkbox value="false" checked="true" class="mandatory" > 
                    <label xml:lang="de">&#160;&#160;Ich erkenne die Regelungen	zur Nutzung der Digitalen Bibliothek an.</label>
                    <label xml:lang="en">&#160;&#160;i accept the licencse rights for using the digital library account. </label>
                </checkbox>
            </cell>
			<cell row="34" col="3" anchor="EAST">
                <helpPopup id="HRights" width="400px" >
