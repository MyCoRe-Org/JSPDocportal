<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE editor>

<editor  id="editor-author-institution" >

 <target type="servlet" name="MCRPassToTargetServlet" method="post" format="xml" /> 
  <validationMessage>
      <label xml:lang="de">
        Eingabefehler: Bitte korrigieren Sie die markierten Felder 
      </label>              
      <label xml:lang="en">
        input error: Please correct the highlighted items
      </label>                    
  </validationMessage>

 <components root="author-institution" var="/mycoreobject">

  <include uri="webapp:editor/workflow/imports-common.xml" />

  <headline anchor="CENTER">
   <text>
    <label i18n="Editor.Common.headline" />
   </text>
  </headline>

  <panel id="author-institution">
   <hidden var="ID" />
   <hidden var="label" />

   <cell col="1" row="1" anchor="NORTHWEST" ref="LINameP" />
   <cell col="2" row="1" anchor="NORTHWEST" ref="DIName" sortnr="1" />
   <cell col="3" row="1" anchor="NORTHWEST" >
    <space width="20" height="0" />
   </cell>
   <cell col="4" row="1" anchor="WEST" ref="HIName" />

   <cell col="1" row="2" anchor="NORTHWEST" ref="LAddressM" />
   <cell col="2" row="2" anchor="NORTHWEST" ref="DAddress" sortnr="2" />
   <cell col="3" row="2" anchor="NORTHWEST" >
    <space width="20" height="0" />
   </cell>
   <cell col="4" row="2" anchor="WEST" ref="HAddress" />

   <cell col="1" row="3" anchor="NORTHWEST" ref="LPhone" />
   <cell col="2" row="3" anchor="NORTHWEST" ref="DPhone" sortnr="3" />
   <cell col="3" row="3" anchor="NORTHWEST" >
    <space width="20" height="0" />
   </cell>
   <cell col="4" row="3" anchor="WEST" ref="HPhone" />

   <cell col="1" row="4" anchor="NORTHWEST" ref="LURL" />
   <cell col="2" row="4" anchor="NORTHWEST" ref="DURL" sortnr="4" />
   <cell col="3" row="4" anchor="NORTHWEST" >
    <space width="20" height="0" />
   </cell>
   <cell col="4" row="4" anchor="WEST" ref="HURL" />

   <cell col="1" row="5" anchor="NORTHWEST" ref="LEmail" />
   <cell col="2" row="5" anchor="NORTHWEST" ref="DEmail" sortnr="5" />
   <cell col="3" row="5" anchor="NORTHWEST" >
    <space width="20" height="0" />
   </cell>
   <cell col="4" row="5" anchor="WEST" ref="HEmail" />

   <cell col="1" row="6" anchor="NORTHWEST" ref="LNote" />
   <cell col="2" row="6" anchor="NORTHWEST" ref="DNote" sortnr="6" />
   <cell col="3" row="6" anchor="NORTHWEST" >
    <space width="20" height="0" />
   </cell>
   <cell col="4" row="6" anchor="WEST" ref="HNote" />

   <cell col="1" row="8" />
   <cell col="2" row="8" anchor="WEST" ref="TwoButtons"  />
  </panel>


  <panel id="DIName">
    <hidden var="metadata/names/@class" default="MCRMetaInstitutionName" />
    <hidden var="metadata/names/@parasearch" default="true" />
    <hidden var="metadata/names/@textsearch" default="true" />
    <hidden var="metadata/names/@notinherit" default="false" />
    <hidden var="metadata/names/@heritable" default="true" />
    <hidden var="metadata/names/name/@inherited" default="0" />
    <hidden var="metadata/names/name/@lang" default="de" />

    <cell col="2" row="1" anchor="NORTHWEST" var="metadata/names/name/fullname"  >
	  <textfield id="tf.fullname" width="30" maxlength="128"   >		
		<condition required="true" id="cond.Name">
			<label i18n="Editor.Validate.Name.Empty" />
		</condition>
	  </textfield>	
    </cell>
    <cell col="3" row="1" anchor="NORTHWEST" ref="AINameName" />
    <cell col="2" row="2" anchor="NORTHWEST" ref="TFzeile32" var="metadata/names/name/nickname"  />
    <cell col="3" row="2" anchor="NORTHWEST" ref="AINameNick" />
    <cell col="2" row="3" anchor="NORTHWEST" ref="TFzeile32" var="metadata/names/name/property"  />
    <cell col="3" row="3" anchor="NORTHWEST" ref="AINameProp" />
  </panel>

  <panel id="DAddress">
    <hidden var="metadata/addresses/@class" default="MCRMetaAddress"  />
    <hidden var="metadata/addresses/@parasearch" default="true" />
    <hidden var="metadata/addresses/@textsearch" default="true" />
    <hidden var="metadata/addresses/@notinherit" default="false" />
    <hidden var="metadata/addresses/@heritable" default="true" />
    <hidden var="metadata/addresses/address/@inherited" default="0" />
    <hidden var="metadata/addresses/address/@lang" default="de" />

    <cell col="2" row="1" anchor="NORTHWEST" ref="Scountry" var="metadata/addresses/address/country"  />
    <cell col="3" row="1" anchor="NORTHWEST" ref="AAddressCountry" />
    <cell col="2" row="2" anchor="NORTHWEST" ref="Sstate" var="metadata/addresses/address/state"  />
    <cell col="3" row="2" anchor="NORTHWEST" ref="AAddressState" />
    <cell col="2" row="3" anchor="NORTHWEST" var="metadata/addresses/address/zipcode" >
	  <textfield id="tf.ZipCode" width="10" maxlength="128"  >		
		<condition required="true" id="cond.ZipCode">
			<label i18n="Editor.Validate.City.Empty" />
		</condition>
	  </textfield>	
    </cell>    
    <cell col="3" row="3" anchor="NORTHWEST" ref="AAddressZIP" />
    <cell col="2" row="4" anchor="NORTHWEST" var="metadata/addresses/address/city"  >
	  <textfield id="tf.Country" width="30" maxlength="128"  >		
		<condition required="true" id="cond.Country">
			<label i18n="Editor.Validate.City.Empty" />
		</condition>
	  </textfield>	
    </cell>
    <cell col="3" row="4" anchor="NORTHWEST" ref="AAddressCity" />
    <cell col="2" row="5" anchor="NORTHWEST" ref="TFzeile128" var="metadata/addresses/address/street"  />
    <cell col="3" row="5" anchor="NORTHWEST" ref="AAddressStreet" />
    <cell col="2" row="6" anchor="NORTHWEST" ref="TFzeile10" var="metadata/addresses/address/number" />
    <cell col="3" row="6" anchor="NORTHWEST" ref="AAddressNumber" />
  </panel>

  <panel id="DPhone">
    <hidden var="metadata/phones/@class" default="MCRMetaLangText"  />
    <hidden var="metadata/phones/@parasearch" default="true" />
    <hidden var="metadata/phones/@textsearch" default="true" />
    <hidden var="metadata/phones/@notinherit" default="false" />
    <hidden var="metadata/phones/@heritable" default="true" />
    <hidden var="metadata/phones/phone/@inherited" default="0" />
    <hidden var="metadata/phones/phone/@lang" default="de" />
    <hidden var="metadata/phones/phone[2]/@lang" default="de" />

    <cell col="2" row="1" anchor="NORTHWEST" ref="TFzeile128" var="metadata/phones/phone"  />
    <cell col="3" row="1" anchor="NORTHWEST" ref="Sphone" var="metadata/phones/phone/@type"  />
    <hidden var="metadata/phones/phone[2]/@inherited" default="0" />

    <cell col="2" row="2" anchor="NORTHWEST" ref="TFzeile128" var="metadata/phones/phone[2]"  />
    <cell col="3" row="2" anchor="NORTHWEST" ref="Sphone" var="metadata/phones/phone[2]/@type"  />
  </panel>

  <panel id="DURL">
    <hidden var="metadata/urls/@class" default="MCRMetaLink" />
    <hidden var="metadata/urls/@parasearch" default="true" />
    <hidden var="metadata/urls/@textsearch" default="true" />
    <hidden var="metadata/urls/@notinherit" default="false" />
    <hidden var="metadata/urls/@heritable" default="true" />
    <hidden var="metadata/urls/url/@inherited" default="0" />
    <hidden var="metadata/urls/url/@type" default="locator" />
    <cell col="1" row="1" anchor="NORTHWEST" >
      <space width="80" height="0" />
    </cell>
    <cell col="2" row="1" anchor="NORTHWEST" ref="TFzeile128" var="metadata/urls/url/@title"  />
    <cell col="3" row="1" anchor="NORTHWEST" ref="AURLTitle" />
    <cell col="2" row="2" anchor="NORTHWEST" ref="TFzeile128" var="metadata/urls/url/@href"  />
    <cell col="3" row="2" anchor="NORTHWEST" ref="AURLReference" />
  </panel>

  <panel id="DEmail">
    <hidden var="metadata/emails/@class" default="MCRMetaLangText" />
    <hidden var="metadata/emails/@parasearch" default="true" />
    <hidden var="metadata/emails/@textsearch" default="true" />
    <hidden var="metadata/emails/@notinherit" default="false" />
    <hidden var="metadata/emails/@heritable" default="true" />
    <hidden var="metadata/emails/email/@inherited" default="0" />
    <hidden var="metadata/emails/email/@lang" default="de" />

    <cell col="2" row="1" anchor="NORTHWEST" ref="TFzeile128" var="metadata/emails/email" />
  </panel>

  <panel id="DNote">
    <hidden var="metadata/notes/@class" default="MCRMetaLangText" />
    <hidden var="metadata/notes/@parasearch" default="true" />
    <hidden var="metadata/notes/@textsearch" default="true" />
    <hidden var="metadata/notes/@notinherit" default="false" />
    <hidden var="metadata/notes/@heritable" default="true" />
    <hidden var="metadata/notes/note/@inherited" default="0" />
    <hidden var="metadata/notes/note/@lang" default="de" />
    <cell col="2" row="1" anchor="NORTHWEST" ref="TFarea4096" var="metadata/notes/note"  default=""/>
  </panel>

 </components>
</editor>

