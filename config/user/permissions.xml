     <condition value="authorgroup2" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>
  <mcrpermission name="create-institution" description="Erzeugen einer Institution">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admingroup" operator="=" field="group"/>
     <condition value="authorgroup1" operator="=" field="group"/>
     <condition value="authorgroup2" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>  
</mcrpermissions>
