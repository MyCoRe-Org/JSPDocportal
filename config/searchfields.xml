<?xml version="1.0" encoding="UTF-8"?>

<searchfields xmlns="http://www.mycore.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mycore.org/ searchfields.xsd">

  <!-- Search in MCRObject metadata -->
  <index id="metadata">

    <!-- Search in service/structural metadata -->  
	<field name="id"            type="identifier" source="objectMetadata" xpath="/mycoreobject" value="@ID" />
    <field name="objectType"    type="identifier" source="objectMetadata" xpath="/mycoreobject" value="substring-before(substring-after(@ID,'_'),'_')" />
    <field name="link"          type="identifier" source="objectMetadata" xpath="/mycoreobject/descendant::*[@xlink:href]" value="@xlink:href" />
    <field name="parent"        type="identifier" source="objectMetadata" xpath="/mycoreobject/structure/parents/parent" value="@xlink:href" />
    <field name="modified"      type="timestamp"  source="objectMetadata" xpath="/mycoreobject/service/servdates/servdate[@type='modifydate']" value="concat(substring(.,1,10),' ',substring(.,12,8))" />

    <!-- Search in all metadata fields (that have an xml:lang attribute) -->
    <field name="allMeta"       type="text"       source="objectMetadata" xpath="/mycoreobject | /mycoreobject/metadata//*" value="@ID | text() | @xlink:title" />

    <field name="bkl"           type="identifier" source="objectCategory" objects="disshab document" xpath="/mycoreobject/metadata/bkls/bkl" value="@ID" /> 
    <field name="ddc"           type="identifier" source="objectCategory" objects="disshab document" xpath="/mycoreobject/metadata/subjects/subject" value="@ID" /> 
    
    <field name="type"          type="identifier" source="objectCategory" xpath="/mycoreobject/metadata/types/type" value="@ID" />
    <field name="format"        type="identifier" source="objectCategory" xpath="/mycoreobject/metadata/formats/format" value="@ID" />
    <field name="origin"        type="identifier" source="objectCategory" xpath="/mycoreobject/metadata/origins/origin" value="@ID" />
    <field name="subject"       type="identifier" source="objectCategory" xpath="/mycoreobject/metadata/subjects/subject" value="@ID" />
    <field name="language"      type="identifier" source="objectCategory" xpath="/mycoreobject/metadata/languages/language" value="@ID" />
	<field name="national"      type="identifier" source="objectCategory" objects="author" xpath="/mycoreobject/metadata/nationals/national" value="@ID" />

    <!-- Search in document metadata -->    
    <field name="title"     type="text" sortable="true" source="objectMetadata" xpath="/mycoreobject/metadata/titles/title | /mycoreobject/metadata/surnames/surname | mycoreobject/metadata/names/name | mycoreobject/metadata/contents/content" value="text() | @xlink:title"  />
    
    <!--  field name="title"         type="text"      sortable="true" source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/titles/title" value="text()" / -->
    <field name="author"        type="name"       sortable="true" source="objectMetadata"  xpath="/mycoreobject/metadata/creators/creator | /mycoreobject/metadata/creatorlinks/creatorlink " value="text() | @xlink:title" />
    <field name="authorID"      type="identifier" source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/creatorlinks/creatorlink" value="@xlink:href" />
    <field name="creator"       type="name"      sortable="true" source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/creators/creator | /mycoreobject/metadata/creatorlinks/creatorlink " value="text() | @xlink:title" />
    <field name="creatorID"     type="identifier" source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/creatorlinks/creatorlink" value="@xlink:href" />
    <field name="publisher"     type="name"       source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/publishers/publisher | /mycoreobject/metadata/publisherlinks/publisherlink" value="text() | @xlink:title" />
    <field name="publisherID"   type="identifier" source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/publisherlinks/publisherlink " value="@xlink:href" />
    <field name="contributor"   type="name"       source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/contributors/contributor | /mycoreobject/metadata/contributorlinks/contributorlink" value="text() | @xlink:title" />
    <field name="contributorID" type="identifier" source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/contributorlinks/contributorlink" value="@xlink:href" />
    <field name="keywords"      type="text"       source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/keywords/keyword" value="text()" />
    <field name="description"   type="text"       source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/descriptions/description" value="text()" />
    <field name="source"        type="text"       source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/sources/source" value="text()" />
    <field name="coverage"      type="text"       source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/coverages/coverage" value="text()" />
    <field name="rights"        type="text"       source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/rights/right" value="text()" />
    <field name="relation"      type="text"       source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/relations/relation" value="text()" />
    <field name="isbn"          type="identifier" source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/isbns/isbn" value="text()" />
    <field name="date"          type="date"      sortable="true" source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/dates/date" value="ext:normalizeDate(string(normalize-space(text())))" />
    <field name="identifier"    type="identifier" source="objectMetadata" objects="document disshab" xpath="/mycoreobject/metadata/identifiers/identifier" value="text()" />

    <!-- Search in author or institution metadata -->
    <field name="surname"       type="name"       sortable="true" source="objectMetadata" objects="author" xpath="/mycoreobject/metadata/names/name/surname"  value="text()" />
    <field name="firstname"     type="name"       sortable="true" source="objectMetadata" objects="author" xpath="/mycoreobject/metadata/names/name/firstname"  value="text()" />
    <field name="fullname"      type="identifier" sortable="true" source="objectMetadata" objects="author institution" xpath="/mycoreobject/metadata/names/name/fullname" value="text()" />
    <field name="sortname"      type="name"       sortable="true" source="objectMetadata" objects="author institution" xpath="/mycoreobject/metadata/names/name/fullname" value="text()" />
    <field name="profession"    type="text"       source="objectMetadata" objects="author" xpath="/mycoreobject/metadata/professions/profession" value="text()" />
    <field name="institution"   type="identifier" source="objectCategory" objects="author" xpath="/mycoreobject/metadata/institutions/institution" value="@ID" />
    <field name="profclass"     type="identifier" source="objectCategory" objects="author" xpath="/mycoreobject/metadata/profclasses/profclass" value="@ID" />
    <field name="userID"        type="text"  	  source="objectMetadata" objects="author" xpath="/mycoreobject/metadata/userids/userid" value="text()" />
  </index>

  <!-- Search in MCRFile metadata and content -->  
  <index id="content">
  
    <!-- Search in fulltext of pdf and txt files -->
    <field name="content" type="text" source="fileTextContent" objects="http pdf ps txt xml msword95 msword97 msppt rtf otd sxw" />
	
    <!-- Search in technical metadata of files -->
    <field name="fileID"            type="identifier" source="fileMetadata" xpath="file/@id" value="." />
    <field name="DerivateID"        type="identifier" source="fileMetadata" xpath="file/@owner" value="." />
    <field name="fileName"          type="identifier" source="fileMetadata" xpath="file/@name" value="." />
    <field name="filePath"          type="identifier" source="fileMetadata" xpath="file/@path" value="." />
    <field name="fileSize"          type="integer"    source="fileMetadata" xpath="file/@size" value="." />
    <field name="fileExtension"     type="identifier" source="fileMetadata" xpath="file/@extension" value="." />
    <field name="fileContentTypeID" type="identifier" source="fileMetadata" xpath="file/contentTypeID" value="." />
    <field name="fileContentType"   type="text"       source="fileMetadata" xpath="file/@contentType" value="." />
    <field name="fileDateModified"  type="date"       source="fileMetadata" xpath="file/@modified" value="." />
    
    <!-- Search in technical metadata of audio/video files -->
    <field name="avBitRate"         type="integer"    source="fileMetadata" xpath="file/@bitRate" value="." />
    <field name="avFrameRate"       type="decimal"    source="fileMetadata" xpath="file/@frameRate" value="." />
    <field name="avDuration"        type="time"       source="fileMetadata" xpath="file/@duration" value="." />
    <field name="avMediaType"       type="identifier" source="fileMetadata" xpath="file/@mediaType" value="." />
  </index>

</searchfields>
