<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE Editor>
<editor class="editor" id="editor-author-addfile">
	 <!-- this is a special editor - do not enable this: <source uri="{sourceUri}" /> -->
	 <cancel url="{cancelUrl}" />
	 <target type="servlet" name="MCRPassToTargetServlet" method="post" format="xml" />
	 <validationMessage>
	 	<label i18n="Editor.Common.validationMessage" />
	 </validationMessage>
	 
	 <components root="author-addfile" var="/mycorederivate">
	 	<headline anchor="CENTER">
	 		<text><label i18n="Editor.Common.addFiles" /></text>
	 	</headline>
	 	
	 	<panel id="author-addfile">
	 		<cell col="1" row="1" anchor="NORTHWEST" ref="LFileP" />
	 		<cell col="2" row="1" anchor="NORTHWEST" ref="DFileUploadDoc" />
	 		<cell col="3" row="1" anchor="NORTHWEST" >
	 			<space width="20" height="0" />
	 		</cell>
	 		<cell col="4" row="1" anchor="WEST" ref="HFile" />
	 		<cell col="2" row="2" anchor="NORTHWEST" ref="LFileUploadHint" />
	 		
	 		<cell col="1" row="3" anchor="EAST"      ref="TwoButtons"  />
	 	</panel>

		<!-- *** Data for the file upload *** -->
		<panel id="DFileUploadDoc" lines="on">
			<cell row="1" col="1" anchor="WEST" var="pathes/path">
				<file width="60" maxlength="50000000" />
    		</cell>
    <!--    <cell row="2" col="1" anchor="WEST" var="pathes/path[2]">
      			<file width="60" maxlength="50000000" />
    		</cell>
    		<cell row="3" col="1" anchor="WEST" var="pathes/path[3]">
      			<file width="60" maxlength="50000000" />
    		</cell>     -->
    	</panel>

		<text id="LFileP" i18n="Editor.Label.DigitalObjectsM" />
		<text id="LFileUploadHint" i18n="Editor.Label.FileUploadHint" />
	
		<helpHover id="HFile"  i18n="Editor.Help.HDigitalObjects" />
	
		<panel id="TwoButtons">
			<cell col="1" row="1" anchor="WEST" ref="BCancel" />
			<cell col="2" row="1" anchor="WEST" ref="BSubmit" var="save" />
		</panel>
	
		<submitButton id="BSubmit" width="100px" jsaction="return checkMyForm()">
			<label i18n="Editor.Common.button.Submit" />
		</submitButton>

		<cancelButton id="BCancel" width="100px">
			<label i18n="Editor.Common.button.Cancel" />
		</cancelButton>
	
		<!-- *** End *** -->
	</components>
</editor>
