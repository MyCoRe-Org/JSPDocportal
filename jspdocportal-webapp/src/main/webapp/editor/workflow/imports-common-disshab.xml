    <cell col="1" row="1" anchor="WEST" ref="COrigin" var="metadata/origins/origin/@categid" />
  </panel>

<!-- *** Data for the Description ** -->

  <panel id="RDescription" anchor="NORTHWEST">
    <hidden var="@inherited" default="0" />
    <cell col="1" row="1" anchor="WEST" ref="TFabstract600x10M" />
    <cell col="2" row="1" anchor="NORTHWEST" ref="Slang" var="@xml:lang" default="de"/>
    <hidden var="@type" default="abstract" />
  </panel>
  <textarea id="TFabstract600x10M" width="60" height="10" maxlength="600" default="" class="mandatory">
      <condition id="CAbstractlength" maxLength="2400" required="true" >
      	<label i18n="Editor.Validate.Abstract.Length" /> 
         </condition>
  </textarea>

  <panel id="DDescription">
